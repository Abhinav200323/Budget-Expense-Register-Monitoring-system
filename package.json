{
  "name": "ber-app",
  "version": "1.0.0",
  "description": "BER (Budget, Expense, and Resource) Management Application",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:unit": "jest tests/unit/",
    "test:integration": "jest tests/integration/",
    "test:coverage": "jest --coverage",
    "test:automated": "node run_automated_tests.js",
    "test:simple": "node simple_test_suite.js",
    "test:comprehensive": "node comprehensive_test_suite.js",
    "test:all": "npm run test && npm run test:automated",
    "test:demo": "node test-runner.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mysql2": "^3.6.0",
    "ldapauth-fork": "^5.0.0",
    "bcrypt": "^5.1.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "supertest": "^6.3.3",
    "nodemon": "^3.0.1",
    "axios": "^1.4.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server.js",
      "tests/**/*.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "ber",
    "budget",
    "expense",
    "resource",
    "management",
    "nodejs",
    "express",
    "mysql",
    "ldap"
  ],
  "author": "BER Project Team",
  "license": "MIT"
} 